{% extends 'homebase.html.twig' %}

{% block title %}{{ app.user.name }} Profile{% endblock %}

{% block body %}

    <section id="subintro" xmlns="http://www.w3.org/1999/html">
        <div class="jumbotron subhead" id="overview">
            <div class="container">
                <div class="row">
                    <div class="span8">
                        <h3><i class="m-icon-big-swapright m-icon-white"></i> Comments</h3>
                        <p></p>
                    </div>
                    <div class="span4">
                        <div class="input-append">
                            <form class="form-search">
                                <input type="text" class="input-medium search-query">
                                <button type="submit" class="btn btn-inverse">Search</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="maincontent">
        <div class="container">
            <div class="row">
                {{ include('user/usermenu.html.twig') }}

                <!-- -----------article-------------------    -->

                <div class="span8">
                    <article class="blog-post">
                        <div class="tooltip-demo headline">
                            <h4><strong>User Comment List</strong></h4>
                        </div>

                        <!-- start article 2 -->
                        <article class="blog-post">

                            <div class="row">

                                <div class="span8">

                                    <div class="clearfix"></div>


                                    <table class="table">
                                        <thead>
                                        <tr>

                                            <th>Subject</th>
                                            <th>Comment</th>
                                            <th>Status</th>
                                            <th>News</th>
                                            <th>Created_at</th>
                                            <th>Actions</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for comment in comments %}
                                            <tr>

                                                <td>{{ comment.subject }}</td>
                                                <td>{{ comment.comment }}</td>
                                                <td>{{ comment.status }}</td>
                                                <td nowrap><a href="{{ path('news_show',{'id':comment.newsid}) }}">{{ comment.title }}</a></td>
                                                <td>{{ comment.created_at }}</td>
                                                <td>
                                                    <a href="" class="btn btn-danger">Delete</a>
                                                </td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="9">No records found</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>

                                    <button class="btn btn btn-success" type="button">Read more</button>
                                </div>
                            </div>

                        </article>
                        <!-- end article 2 -->
                        <div class="row">

                            <div class="span3">
                                <!-- -----------end article-------------------    -->




                            </div>
                        </div>
                    </article>
                </div>
            </div>
        </div>
      </div>
    </section>

{% endblock %}
