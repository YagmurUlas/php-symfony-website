{% extends 'adminbase.html.twig' %}

{% block title %}Show events{% endblock %}

{% block body %}

    <script language="JavaScript" type="text/javascript">
        function openWin( windowURL, windowName, windorFeatures) { window.open( windowURL, windowName, windorFeatures); }
    </script>

    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-md-flex no-block align-items-center">

                    <div class="ml-auto text-right">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">event Page</li>
                            </ol>
                        </nav>
                    </div>
                </div>

            </div>
        </div>

        <div class="container-fluid">

            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <h3> Show events </h3><br>
                            <div class="d-md-flex align-items-center">
                                <!-- ============================================================== -->
                                <table class="table">
                                    <tbody>
                                    <tr>
                                        <th>Id</th>
                                        <td>{{ event.id }}</td>
                                    </tr>
                                    <tr>
                                        <th>Date</th>
                                        <td>{{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</td>
                                    </tr>
                                    <tr>
                                        <th>Updated_At</th>
                                        <td>{{ event.updatedAt ? event.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                    </tr>
                                    <tr>
                                        <th>Userid</th>
                                        <td>{{ event.userid }}</td>
                                    </tr>
                                    <tr>
                                        <th>Status</th>
                                        <td>{{ event.status }}</td>
                                    </tr>
                                    <tr>
                                        <th>City</th>
                                        <td>{{ event.city }}</td>
                                    </tr>
                                    <tr>
                                        <th>Country</th>
                                        <td>{{ event.country }}</td>
                                    </tr>
                                    <tr>
                                        <th>Description</th>
                                        <td>{{ event.description }}</td>
                                    </tr>
                                    <tr>
                                        <th>Title</th>
                                        <td>{{ event.title }}</td>
                                    </tr>
                                    <tr>
                                        <th>Details</th>
                                        <td>{{ event.details }}</td>
                                    </tr>
                                    </tbody>
                                </table>
                                <!-- ============================================================== -->
                            </div>
                        </div>

                    </div>
                    <a href="{{ path('admin_event_index') }}" class="btn btn-block btn-outline-primary" type="button">Back to List</a>

                    <a href="{{ path('admin_event_edit', {'id': event.id}) }}" class="btn btn-block btn-outline-primary" type="button">Edit</a>
                    <br>
                    {{ include('admin/event/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>




{% endblock %}