{% extends 'adminbase.html.twig' %}
{% block title %}News{% endblock %}

{% block body %}

<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">News List</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Category</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Sales Cards  -->
        <!-- ============================================================== -->
        <div class="row">

        </div>
        <!-- ============================================================== -->
        <!-- Sales chart -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-md-flex align-items-center">
                            <table class="table">
                                <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ news.id }}</td>
                                </tr>
                                <tr>
                                    <th>Title</th>
                                    <td>{{ news.title }}</td>
                                </tr>
                                <tr>
                                    <th>Keywords</th>
                                    <td>{{ news.keywords }}</td>
                                </tr>
                                <tr>
                                    <th>Description</th>
                                    <td>{{ news.description }}</td>
                                </tr>
                                <tr>
                                    <th>Image</th>
                                    <td><img src="{{ asset('uploads/images/' ~ news.image) }}" height="80" ></td>
                                </tr>
                                <tr>
                                    <th>City</th>
                                    <td>{{ news.city }}</td>
                                </tr>
                                <tr>
                                    <th>Country</th>
                                    <td>{{ news.country }}</td>
                                </tr>
                                <tr>
                                    <th>Status</th>
                                    <td>{{ news.status }}</td>
                                </tr>

                                <tr>
                                    <th>Created_at</th>
                                    <td>{{ news.createdAt ? news.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                                </tbody>
                            </table>

                        </div>
                    </div>

                    <a href="{{ path('admin_news_index') }}" class="btn btn-outline-primary" type="button">Back to List</a><br>
                    <a href="{{ path('admin_news_edit', {'id': news.id}) }}" class="btn btn-outline-primary" type="button">Edit</a><br>
                    {{ include('admin/news/_delete_form.html.twig') }} <br>
                </div>
            </div>
        </div>
    </div>
</div>

        {% endblock %}
