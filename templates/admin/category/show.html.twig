{% extends 'adminbase.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <h4 class="page-title">Category List</h4>
                    <div class="ml-auto text-right">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Category</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
            <br>
            {{ include('admin/category/_delete_form.html.twig') }}
        </div>

        <div class="container-fluid">
            <!-- ============================================================== -->
            <!-- Sales Cards  -->
            <!-- ============================================================== -->
            <div class="row">

            </div>
            <!-- ============================================================== -->
            <!-- Sales chart -->
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-md-flex align-items-center">
                                <table class="table">
                                    <tbody>
                                    <tr>
                                        <th>Id</th>
                                        <td>{{ category.id }}</td>
                                    </tr>
                                    <tr>
                                        <th>Parentid</th>
                                        <td>{{ category.parentid }}</td>
                                    </tr>
                                    <tr>
                                        <th>Title</th>
                                        <td>{{ category.title }}</td>
                                    </tr>
                                    <tr>
                                        <th>Keywords</th>
                                        <td>{{ category.keywords }}</td>
                                    </tr>
                                    <tr>
                                        <th>Description</th>
                                        <td>{{ category.description }}</td>
                                    </tr>
                                    <tr>
                                        <th>Image</th>
                                        <td>{{ category.image }}</td>
                                    </tr>
                                    <tr>
                                        <th>Status</th>
                                        <td>{{ category.status }}</td>
                                    </tr>

                                    </tbody>
                                </table>

                            </div>
                        </div>
                        <a href="{{ path('admin_category_index') }}" class="btn btn-outline-primary" type="button">Back to List</a>
                        <a href="{{ path('admin_category_edit', {'id': category.id}) }}" class="btn btn-outline-primary" type="button">Edit</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
