{% extends 'adminbase.html.twig' %}

{% block title %}Category Home Page{% endblock %}

{% block body %}

    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <a href="{{ path('admin_category_new') }}"  class="btn btn-outline-danger" type="button">Create New Category</a>
                    <div class="ml-auto text-right">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Category</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row">
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-md-flex align-items-center">

                                <!-- Burada biter  -->
                                <table class="table table-bordered">
                                    <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Parentid</th>
                                        <th>Title</th>
                                        <th>Keywords</th>
                                        <th>Description</th>
                                        <th>Image</th>
                                        <th>Status</th>

                                        <th>Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for category in categories %}
                                        <tr>
                                            <td>{{ category.id }}</td>
                                            <td>{{ category.parentid }}</td>
                                            <td>{{ category.title }}</td>
                                            <td>{{ category.keywords }}</td>
                                            <td>{{ category.description }}</td>
                                            <td>{{ category.image }}</td>
                                            <td>{{ category.status }}</td>

                                            <td>

                                                <a href="{{ path('admin_category_show', {'id': category.id}) }}" class="btn btn-block btn-warning">Show</a>
                                                <a href="{{ path('admin_category_edit', {'id': category.id}) }}" class="btn btn-block btn-primary" >Edit</a>
                                                <br>{{ include('admin/category/_delete_form.html.twig') }}<br>
                                            </td>

                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="10">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
