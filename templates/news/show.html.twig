{% extends 'homebase.html.twig' %}

{% block title %}{{ app.user.name }} Profile{% endblock %}

{% block body %}

    <section id="subintro" xmlns="http://www.w3.org/1999/html">
        <div class="jumbotron subhead" id="overview">
            <div class="container">
                <div class="row">
                    <div class="span8">
                        <h3><i class="m-icon-big-swapright m-icon-white"></i> User Information</h3>
                        <p></p>
                    </div>
                    <div class="span4">
                        <div class="input-append">
                            <form class="form-search">
                                <input type="text" class="input-medium search-query">
                                <button type="submit" class="btn btn-inverse">Search</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="maincontent">
        <div class="container">
            <div class="row">
                {{ include('user/usermenu.html.twig') }}

                <!-- -----------article-------------------    -->

                <div class="span8">
                    <article class="blog-post">
                        <div class="tooltip-demo headline">
                            <h4><strong>News Detail</strong></h4>
                        </div>

                        <div class="row">

                            <div class="span3">
                                <!-- -----------end article-------------------    -->
                                <table class="table">
                                    <tbody>
                                    <tr>
                                        <th>Id</th>
                                        <td>{{ news.id }}</td>
                                    </tr>
                                    <tr>
                                        <th>Title</th>
                                        <td>{{ news.title }}</td>
                                    </tr>
                                    <tr>
                                        <th>Keywords</th>
                                        <td>{{ news.keywords }}</td>
                                    </tr>
                                    <tr>
                                        <th>Description</th>
                                        <td>{{ news.description }}</td>
                                    </tr>
                                    <tr>
                                        <th>Image</th>
                                        <td>{{ news.image }}</td>
                                    </tr>
                                    <tr>
                                        <th>City</th>
                                        <td>{{ news.city }}</td>
                                    </tr>
                                    <tr>
                                        <th>Country</th>
                                        <td>{{ news.country }}</td>
                                    </tr>
                                    <tr>
                                        <th>Status</th>
                                        <td>{{ news.status }}</td>
                                    </tr>
                                    <tr>
                                        <th>Updated_at</th>
                                        <td>{{ news.updatedAt ? news.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                    </tr>
                                    <tr>
                                        <th>Created_at</th>
                                        <td>{{ news.createdAt ? news.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                    </tr>
                                    <tr>
                                        <th>Detail</th>
                                        <td>{{ news.detail }}</td>
                                    </tr>
                                    <tr>
                                        <th>Userid</th>
                                        <td>{{ news.userid }}</td>
                                    </tr>
                                    </tbody>
                                </table>

                            </div>
                        </div>

                        {{ include('news/_delete_form.html.twig') }}
                        <a href="{{ path('user_news_index')}}" class="btn btn-block btn-dark" type="button">Back to List</a>

                    </article>
                </div>
            </div>
        </div>
        </div>
    </section>
{% endblock %}
